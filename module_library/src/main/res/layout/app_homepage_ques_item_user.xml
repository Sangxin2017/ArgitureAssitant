<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_homepage_ques_item_user_user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/app_homepage_ques_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="悠悠"
        app:layout_constraintStart_toEndOf="@+id/main_homepage_ques_item_user_user_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_homepage_ques_item_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="3分钟前"
        app:layout_constraintStart_toEndOf="@+id/main_homepage_ques_item_user_user_image"
        app:layout_constraintTop_toBottomOf="@+id/app_homepage_ques_item_user_name" />

    <TextView
        android:id="@+id/app_homepage_ques_item_user_place_tv"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:text="湖南"
        app:layout_constraintBottom_toBottomOf="@+id/app_homepage_ques_item_user_time"
        app:layout_constraintStart_toEndOf="@+id/app_homepage_ques_item_user_time"
        app:layout_constraintTop_toTopOf="@+id/app_homepage_ques_item_user_time"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/app_homepage_ques_item_user_place_tv"
        app:layout_constraintStart_toEndOf="@+id/app_homepage_ques_item_user_name"
        app:srcCompat="@drawable/app_homepage_attention_active_icon" />

</android.support.constraint.ConstraintLayout>