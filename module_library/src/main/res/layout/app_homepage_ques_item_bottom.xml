<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/app_homepage_ques_item_bottom_activity_image"
        android:layout_width="@dimen/app_homepage_ques_item_bottom_image_height"
        android:layout_height="@dimen/app_homepage_ques_item_bottom_image_height"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/app_homepage_attention_hot_icon"
        tools:layout_editor_absoluteX="45dp" />

    <TextView
        android:id="@+id/app_homepage_ques_item_bottom_activity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/app_homepage_ques_item_bottom_activity_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/app_homepage_ques_item_bottom_comment_image"
        android:layout_width="@dimen/app_homepage_ques_item_bottom_image_height"
        android:layout_height="@dimen/app_homepage_ques_item_bottom_image_height"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/app_homepage_ques_item_bottom_comment_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/app_homepage_attention_commment_icon" />

    <TextView
        android:id="@+id/app_homepage_ques_item_bottom_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:text="07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>