<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f0f2f2f2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/app_question_add_chose"
        tools:layout_editor_absoluteY="0dp" />


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_question_mood_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/app_question_mood_icon_bac_xml"
            android:padding="15dp"
            android:src="@drawable/app_question_mood_icon" />

        <TextView
            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布   心情" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_question_question_btn"
            android:background="@drawable/app_question_mood_icon_bac_xml"
            android:padding="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_question_question_icon" />


        <TextView

            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布   问题" />

    </LinearLayout>


    <ImageView
        android:id="@+id/app_question_submit_cancle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_question_cross_icon" />









</RelativeLayout>